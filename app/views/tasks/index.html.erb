<h1>Listing tasks</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.text %></td>
    <td><%= link_to 'Show', task_path(task) %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New task', new_task_path %>
